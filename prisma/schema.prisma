// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())

  cars cars[]
}

model specifications {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())

  specifications_cars specifications_cars[]
}

model users {
  id            String   @id @default(uuid())
  name          String   @unique
  username      String
  avatar        String?
  password      String
  email         String
  driverLicense String
  isAdmin       Boolean? @default(false)
  createdAt     DateTime @default(now())
}

model cars {
  id           String   @id @default(uuid())
  name         String
  description  String
  dailyRate    Decimal
  available    Boolean  @default(true)
  licensePlate String
  fineAmount   Decimal
  brand        String
  createdAt    DateTime @default(now())

  categoryId String
  category   categories @relation(fields: [categoryId], references: [id])

  specifications_cars specifications_cars[]
  cars_image          cars_image[]
}

model specifications_cars {
  car             cars           @relation(fields: [carId], references: [id])
  specification   specifications @relation(fields: [specificationId], references: [id])
  carId           String
  specificationId String

  assignedAt DateTime @default(now())

  @@id([carId, specificationId])
}

model cars_image {
  id         String   @id @default(uuid())
  imageName  String[]
  created_at DateTime @default(now())

  carsId String
  cars   cars   @relation(fields: [carsId], references: [id])
}
